<div data-hook="user_gdpr_consent_status" class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">
      <%= Spree.t(:user_consent_check_list) %>
    </h1>
  </div>
  <table class="table" id="gdpr-stats" data-hook="data-hook">
    <tr>
      <td width="70%"><%= Spree.t(:allows_user_preference_cookies) %>:</td>
      <td>
        <span class="icon <% if try_spree_current_user.allows_user_preference_cookies %>icon-save<% else %>icon-delete<% end %>"></span>
      </td>
    </tr>
    <tr>
      <td width="70%"><%= Spree.t(:allows_marketing_cookies) %>:</td>
      <td>
        <span class="icon <% if try_spree_current_user.allows_marketing_cookies %>icon-save<% else %>icon-delete<% end %>"></span>
      </td>
    </tr>

    <tr>
      <td width="70%"><%= Spree.t(:allows_analytics_cookies) %>:</td>
      <td>
        <span class="icon <% if try_spree_current_user.allows_analytics_cookies %>icon-save<% else %>icon-delete<% end %>"></span>
      </td>
    </tr>

    <tr>
      <td width="70%"><%= Spree.t(:accepts_marketing_emails) %>:</td>
      <td>
        <span class="icon <% if try_spree_current_user.accepts_marketing_emails %>icon-save<% else %>icon-delete<% end %>"></span>
      </td>
    </tr>

    <tr>
      <td width="70%"><%= Spree.t(:accepts_store_terms_and_conditions) %>:</td>
      <td>
        <span class="icon <% if try_spree_current_user.accepts_terms_and_conditions %>icon-save<% else %>icon-delete<% end %>"></span>
      </td>
    </tr>
  </table>
</div>
